; {{ ansible_managed }}
; Asterisk Logger Configuration

[general]
dateformat = %F %T.%3q

[logfiles]
; Main log file
messages => {{ asterisk_log_level | default('notice') }},warning,error

; Console output
console => notice,warning,error

; Security events for fail2ban
{% if asterisk_security_log_enabled | default(true) %}
security => security
{% endif %}

; Full debug log (optional)
;full => notice,warning,error,debug,verbose
