# Brewfile - voip-stack Project Dependencies
# =============================================================================
# Project-specific dependencies for voip-stack VoIP infrastructure
#
# Install with: brew bundle --file=Brewfile
# =============================================================================

# =============================================================================
# VIRTUALIZATION (libvirt/QEMU)
# =============================================================================
brew 'qemu'                                    # VM emulation
brew 'libvirt'                                 # Virtualization API
brew 'socket_vmnet'                            # VM networking (vmnet.framework)

# =============================================================================
# INFRASTRUCTURE AS CODE
# =============================================================================
brew 'ansible'                                 # VM provisioning
brew 'ansible-lint'                            # Ansible playbook linting

# =============================================================================
# VOIP TESTING & DEBUGGING
# =============================================================================
brew 'sngrep'                                  # SIP message flow viewer
brew 'sipsak'                                  # SIP testing utility

# =============================================================================
# OPTIONAL TOOLS (uncomment if needed)
# =============================================================================
# brew 'wireshark'                             # Packet analyzer (requires GUI)
# brew 'tcpdump'                               # Command-line packet capture
# brew 'nmap'                                  # Network scanning
# cask 'linphone'                              # SIP softphone for testing
