################################################################
# RTPEngine Configuration - voip-stack
#
# This is an example configuration file for RTPEngine
# The actual configuration is templated by Ansible from:
# ansible/roles/rtpengine/templates/rtpengine.conf.j2
################################################################

[rtpengine]
# Interfaces
interface = internal/192.168.64.20
interface = external/192.168.1.101!192.168.1.101

# Control protocol
listen-ng = udp:192.168.64.20:2223

# Port range for RTP/RTCP
port-min = 10000
port-max = 20000

# TOS/QoS
tos = 184
control-tos = 184

# Timeout values (seconds)
timeout = 60
silent-timeout = 3600
final-timeout = 10800

# Recording
recording-dir = /var/spool/rtpengine
recording-method = pcap
recording-format = eth

# Kernel module
table = 0
no-fallback = false

# Logging
log-level = 6
log-facility = local1
log-facility-cdr = local2
log-facility-rtcp = local3

# Redis (for HA - Phase 2)
# redis = 192.168.64.1:6379
# redis-db = 0
# redis-write = true
# no-redis-required = false

# Performance
num-threads = 4
delete-delay = 30
max-sessions = 5000

# TLS/DTLS
# dtls = yes
# dtls-passive = yes

# SRTP
# srtp-accept-mismatch = yes

# B2BUA mode
b2b-url = http://127.0.0.1:8080/calls

# Homer HEP (Phase 2)
# homer = 192.168.64.1:9060
# homer-protocol = udp
# homer-id = 2001
